<% provide(:title, 'Find Herbs')%>


<div class="row">
	<% if @first.nil? %>
	<div class="message">
	<h2><%= pluralize(@herbs.count, "match") %> found.</h2>
	</div>
	<% end %>
	<% unless @first.nil? %>
	<div class="message">
	<h2><%= pluralize(@herbs.count + 1, "match") %> found.</h2>
	</div>
</div>

<div class="row" id="herbSearch">
	<div class="span7" id="firstresult">
		<div class="well well-large">
			
			<h3><%= link_to @first.name, herb_path(@first) %></h3>
			<p>
				<% unless @first.common_name.blank? %>
					<b>Common Name: </b><i><%= @first.common_name %></i>
				<% end %>
			</p>
			<p>
				<% unless @first.chinese_name.blank? %>
					<b>Chinese Name: </b><i><%= @first.chinese_name %></i>
				<% end %>
			</p>
			<p>
				<%= raw truncate(@first.rendered_overview, :length => 450) %>
			</p>
			<% if signed_in? %>
				<div class="btn-group">
					    		
					<button class="btn">
						<i class="icon-edit"></i> 
						<%= link_to 'Edit', edit_herb_path(@first) %> 
					</button>
						   		
					<button class="btn">
						<i class="icon-trash"></i> 
						<%= link_to 'Destroy', @first, confirm: 'Deleting the herb will permanently remove it from the vault. Are you sure?', method: :delete %> 
					</button>
				</div>
					    	
			<% end %>
			


		</div>
	</div>
	<% end %>
	<% @herbs.each do |herb| %>

	<div class="span4" id="herbSearchSmall">
		
		
			<h3><%= link_to herb.name, herb_path(herb) %></h3>
			<p>
				<% unless herb.common_name.blank? %>
					<b>Common Name: </b><i><%= herb.common_name %></i>
				<% end %>
			</p>
			<p>
				<% unless herb.chinese_name.blank? %>
					<b>Chinese Name: </b><i><%= herb.chinese_name %></i>
				<% end %>
			</p>
			<p>
				<%= raw truncate(herb.rendered_overview, :length => 285) %>
			</p>
			<% if signed_in? %>
				<div class="btn-group">
					    		
					<button class="btn">
						<i class="icon-edit"></i> 
						<%= link_to 'Edit', edit_herb_path(herb) %> 
					</button>
						   		
					<button class="btn">
						<i class="icon-trash"></i> 
						<%= link_to 'Destroy', herb, confirm: 'Deleting the herb will permanently remove it from the vault. Are you sure?', method: :delete %> 
					</button>
				</div>
					    	
			<% end %>
		
	</div>
	<% end %>
	
</div>


<div class="row">
	<div class="span6 offset3">
		<div class="smallmessage">
			Not what you're looking for? 
		</div>
	</div>
</div>

<div class="row">
	<div class="span4 offset4">
	<%= form_tag search_path, :method => :get do %>
			<p>
				<div class="searchbox">

					<%= text_field_tag :search, params[:search] %>
				</div>
			</p>
	</div>
</div>
<div class="row">
	<div class="span4 offset4">
				<div class="btn-group">
				<%= submit_tag "Find a Different Herb!", :class => 'btn', :name => nil %>
				</div>
			</p>
	<% end %>
	</div>
</div>



<div class="row-fluid">
	
	<ul class="breadcrumb">
		<li>
			<a href='/'><i class="icon-home"></i> Chinese-Meds Home</a> <span class="divider">/</span>
		</li>
		<li class="active">
			<i class="icon-search"></i> Find Herbs
		</li>
		
	</ul>
</div>