<%= render 'shared/tinyMce' %>

<%= form_for(@article) do |f| %>
  <%= render 'shared/form_error' %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
  	
    <%= f.label :description %><br />
    
    <%= f.text_area :description, :class => "tinymce" %>
   
    
  </div>
  <div class="field">
  	
    <%= f.label :content %><br />
    
    <%= f.text_area :content, :class => "tinymce" %>
    
    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= tinymce %>


