<% if @article.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@article.errors.count, "error") %>
    </div>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li>* <%= msg %> </li>
    <% end %>
    </ul>
  </div>
<% end %>
   
